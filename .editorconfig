# editorconfig.org

# This is the project's root directory
root = true

[*]
# Use spaces for indentation
indent_style = space
# Each indent should contain 2 spaces
indent_size = 2
# Use Unix line endings
end_of_line = lf
# The files are utf-8 encoded
charset = utf-8
# No whitespace at the end of line! I hate it!
trim_trailing_whitespace = true
# A file must end with an empty line - this is good for version control systems
insert_final_newline = true
# A line should not have more than this amount of chars (not supported by all plugins)
max_line_length = 100

[*.php]
# Each indent should contain 4 spaces
indent_size = 4

[*.{xml,html}]
# For readability, xml-like files should have bigger indentation
indent_size = 4

[Makefile]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
